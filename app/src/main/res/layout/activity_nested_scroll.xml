<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NestedScroll.NestedScrollActivity">

    <com.qianfanyun.ycdemo.NestedScroll.NestedParentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#73D5C7"
            android:gravity="center"
            android:text="top"
            android:textColor="#000000"
            android:textSize="20sp" />

        <com.qianfanyun.ycdemo.NestedScroll.NestedChildLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#26917F"
                android:gravity="center"
                android:text="child"
                android:textColor="#000000"
                android:textSize="20sp" />
        </com.qianfanyun.ycdemo.NestedScroll.NestedChildLinearLayout>
    </com.qianfanyun.ycdemo.NestedScroll.NestedParentLinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>